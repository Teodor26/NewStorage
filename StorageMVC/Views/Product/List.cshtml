@model Storage.Models.DataModels.Product
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<h1>Товары</h1>

<table>
    <tr>
        <td><p>Название</p></td>
        <td></td>
    </tr>
    @foreach(var product in Model)
    {
        <tr>

            <td>
                <p>
                    @product.Name @Html.ActionLink("Редактировать","Update", routeValues: new {id = product.Id})
                    @Html.ActionLink("Удалить","Delete", routeValues: new { id = product.Id})
                </p>
            </td>
        </tr>
        @Html.ActionLink("Добавить","Add","Product")
    }
</table>

